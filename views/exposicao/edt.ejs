<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Editar Exposição</h1>
    <a href="/exposicao/lst" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Voltar</a>
</div>

<form method="post">
    <input type="hidden" name="id" value="<%= Exposicao.id %>">

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nome da Exposição:</label>
            <input type="text" name="nomeColecao" value="<%= Exposicao.nomeColecao %>" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Tema:</label>
            <input type="text" name="tema" value="<%= Exposicao.tema %>" class="form-control" required>
        </div>

        <!-- Se precisar editar o artista, o controlador deve enviar a lista de Artistas para esta view também -->
        <div class="col-md-12">
            <label class="form-label">Artista (ID):</label>
             <input type="text" name="artista" value="<%= Exposicao.artista %>" class="form-control" readonly disabled>
             <div class="form-text">Edição de artista não habilitada neste formulário.</div>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sync"></i> Atualizar</button>
        </div>
    </div>
</form>

<%- include('../rodape.ejs') %>