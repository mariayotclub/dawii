<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="fa fa-users"></i> Artistas</h1>
    <a href="/artista/add" class="btn btn-success"><i class="fa fa-plus"></i> Novo Artista</a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form action="/artista/lst" method="post" class="row g-2">
            <div class="col-auto flex-grow-1">
                <input type="text" name="filtro" class="form-control" placeholder="Pesquisar por nome...">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Pesquisar</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>CPF</th>
                <th>Email</th>
                <th>Celular</th>
                <th class="text-center" style="width: 150px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for (const {id, nome, dataNascimento, CPF, email, celular} of Artistas) { %>
            <tr>
                <td><%= nome %></td>
                <td><%= new Date(dataNascimento).toLocaleDateString('pt-BR') %></td> <!-- Formatação simples de data se for string ISO -->
                <td><%= CPF %></td>
                <td><%= email %></td>
                <td><%= celular %></td>
                <td class="text-center">
                    <a href="/artista/edt/<%= id %>" class="btn btn-sm btn-warning" title="Editar"><i class="fa fa-edit"></i></a>
                    <a href="/artista/del/<%= id %>" class="btn btn-sm btn-danger" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../rodape.ejs') %>