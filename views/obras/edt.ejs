<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Editar Obra</h1>
    <a href="/obras/lst" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Voltar</a>
</div>

<form method="post">
    <input type="hidden" name="id" value="<%= Obras.id %>">
    
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nome da Obra:</label>
            <input type="text" name="nomeColecao" value="<%= Obras.nomeColecao %>" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Artista:</label>
            <select name="artista" class="form-select" required>
                <option value="">Selecione...</option>
                <% Artistas.forEach(function(artista){ %>
                    <option value="<%= artista.id %>" <%= (Obras.artista && Obras.artista.toString() === artista.id) ? 'selected' : '' %>>
                        <%= artista.nome %>
                    </option>
                <% }) %>
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label">Tipo:</label>
            <input type="text" name="tipo" value="<%= Obras.tipo %>" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Descrição:</label>
            <input type="text" name="descricao" value="<%= Obras.descricao %>" class="form-control" required>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sync"></i> Atualizar</button>
        </div>
    </div>
</form>

