<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Editar Artista</h1>
    <a href="/artista/lst" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Voltar</a>
</div>

<form method="post">
    <input type="hidden" name="id" value="<%= Artista.id %>">
    
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Nome:</label>
            <input type="text" name="nome" value="<%= Artista.nome %>" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Data de Nascimento:</label>
            <input type="date" name="dataNascimento" value="<%= Artista.dataNascimento %>" class="form-control" required>
        </div>

        <div class="col-md-4">
            <label class="form-label">CPF:</label>
            <input type="number" name="CPF" value="<%= Artista.CPF %>" class="form-control" required>
        </div>

        <div class="col-md-4">
            <label class="form-label">Email:</label>
            <input type="email" name="email" value="<%= Artista.email %>" class="form-control" required>
        </div>

        <div class="col-md-4">
            <label class="form-label">Celular:</label>
            <input type="number" name="celular" value="<%= Artista.celular %>" class="form-control" required>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sync"></i> Atualizar</button>
        </div>
    </div>
</form>

<%- include('../rodape.ejs') %>