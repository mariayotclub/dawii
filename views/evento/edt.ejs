<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Editar Evento</h1>
    <a href="/evento/lst" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Voltar</a>
</div>

<form method="post">
    <input type="hidden" name="id" value="<%= Evento.id %>">

    <div class="row g-3">
        <div class="col-md-12">
            <label class="form-label">Nome do Evento:</label>
            <input type="text" name="nomeEvento" value="<%= Evento.nomeEvento %>" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Tipo:</label>
            <select name="tipo" class="form-select" required>
                <option value="">Selecione...</option>
                <option value="Workshop" <%= Evento.tipo === 'Workshop' ? 'selected' : '' %>>Workshop</option>
                <option value="Exposição" <%= Evento.tipo === 'Exposição' ? 'selected' : '' %>>Exposição</option>
                <option value="Palestra" <%= Evento.tipo === 'Palestra' ? 'selected' : '' %>>Palestra</option>
                <option value="Outro" <%= Evento.tipo === 'Outro' ? 'selected' : '' %>>Outro</option>
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label">Data:</label>
            <input type="date" name="data" value="<%= new Date(Evento.data).toISOString().split('T')[0] %>" class="form-control" required>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sync"></i> Atualizar</button>
        </div>
    </div>
</form>

