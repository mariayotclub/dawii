<%- include('../cabecalho.ejs') %>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Adicionar Evento</h1>
    <a href="/evento/lst" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Voltar</a>
</div>

<form method="post">
    <div class="row g-3">
        <div class="col-md-12">
            <label class="form-label">Nome do Evento:</label>
            <input type="text" name="nomeEvento" class="form-control" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Tipo de Evento:</label>
            <select name="tipo" class="form-select" required>
                <option value="">Selecione...</option>
                <option value="Workshop">Workshop</option>
                <option value="Exposição">Exposição</option>
                <option value="Palestra">Palestra</option>
                <option value="Outro">Outro</option>
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label">Data:</label>
            <input type="date" name="data" class="form-control" required>
        </div>

        <div class="col-12 mt-4">
            <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-save"></i> Cadastrar</button>
        </div>
    </div>
</form>

